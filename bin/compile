#!/bin/sh

indent() {
  sed -u 's/^/       /'
}

echo "-----> Install youtube-dl"

BUILD_DIR=$1
VENDOR_DIR="vendor"

cd $BUILD_DIR
mkdir -p $VENDOR_DIR
cd $VENDOR_DIR
mkdir -p youtube_dl/bin/

curl -L --silent https://yt-dl.org/downloads/latest/youtube-dl -o youtube_dl/bin/youtube_dl
chmod a+rx youtube-dl/bin/youtube_dl

echo "Exporting PATH" | indent
PROFILE_PATH="$BUILD_DIR/.profile.d/youtube_dl.sh"
mkdir -p $(dirname $PROFILE_PATH)
echo 'export PATH="$PATH:$HOME/vendor/youtube-dl/bin"' >> $PROFILE_PATH
