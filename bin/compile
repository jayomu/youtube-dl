#!/bin/sh

indent() {
  sed -u 's/^/       /'
}

echo "-----> Install youtube-dl"

BUILD_DIR=$1
VENDOR_DIR="vendor"

cd $BUILD_DIR
mkdir -p $VENDOR_DIR
cd $VENDOR_DIR
mkdir -p youtube-dl/bin/

curl -L --silent https://github.com/ytdl-org/youtube-dl/releases/download/2019.09.01/youtube-dl -o youtube-dl/bin/youtube-dl
chmod a+rx youtube-dl/bin/youtube-dl

echo "Exporting PATH" | indent
PROFILE_PATH="$BUILD_DIR/.profile.d/youtube-dl.sh"
mkdir -p $(dirname $PROFILE_PATH)
echo 'export PATH="$PATH:$HOME/vendor/youtube-dl/bin"' >> $PROFILE_PATH
